<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="64dp"
    android:paddingTop="16dp"
    android:paddingRight="64dp"
    android:paddingBottom="16dp"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:background="#47BDED"
            android:padding="18dip"
            android:text="Row"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv21"
            android:layout_weight="1"
            android:background="#FFB500"
            android:gravity="center"
            android:padding="20dip"
            android:text="Row 2 col 1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv22"
            android:layout_weight="1"
            android:background="#FFFA99"
            android:gravity="center"
            android:padding="20dip"
            android:text="Row 2 col 2"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv23"
            android:layout_weight="1"
            android:background="#FFC03E"
            android:gravity="center"
            android:padding="20dip"
            android:text="Row 2 col 3"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv31"
            android:layout_weight="1"
            android:background="#00B9CD"
            android:gravity="center"
            android:padding="20dip"
            android:text="Row 3 col 1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv32"
            android:layout_weight="1"
            android:background="#84D8DC"
            android:gravity="center"
            android:padding="20dip"
            android:text="Row 3 col 2"
            android:textColor="#000000" />
    </TableRow>


</TableLayout>